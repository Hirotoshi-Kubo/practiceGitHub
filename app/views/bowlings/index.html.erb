<h1>ボウリング場サンプル</h1>

<table>
  <thead>
    <tr>
      <th>センター名</th>
      <th>住所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowlings.each do |bowling| %>
      <tr>
        <td><%= bowling.name %></td>
        <td><%= bowling.address %></td>
        <td><%= link_to '詳細', bowling %></td>
        <td><%#= link_to 'Edit', edit_bowling_path(bowling) %></td>
        <td><%#= link_to 'Destroy', bowling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

